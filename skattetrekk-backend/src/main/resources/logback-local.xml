<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="CONSOLE_PLAIN" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d, %-5p, %c:%L, %t] - %mdc %m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE_PLAIN"/>
    </root>

    <logger name="no.nav.frivillig.skattetrekk" level="INFO"/>

    <!-- audit logs goes to console when running locally -->
    <logger name="AUDIT_LOGGER" level="info">
        <appender-ref ref="CONSOLE_PLAIN" />
    </logger>

</configuration>
